.sidebar
  .sidebar__username
    .sidebar__username__top-item
      .sidebar__username__top-item__name
        = current_user.name
      .sidebar__username__top-item__icons
        = link_to new_group_path do
          =icon('far', 'edit', class: 'sidebar__username__top-item__icons__btn') 
        = link_to edit_user_path(current_user) do
          =icon('fas', 'cog', class: 'sidebar__username__top-item__icons__btn')
  
  .sidebar__list 
    - current_user.groups.each do |group|
      .sidebar__list__group
        = link_to group_messages_path(group) do
          .sidebar__list__group__name
            = group.name
          .sidebar__list__group__name__comm
            = group.show_last_message
     
   
      